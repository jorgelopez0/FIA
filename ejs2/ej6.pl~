libro_de_familia(esposo(nombre(antonio,garcia,fernandez),profesion(arquitecto),salario(30000)),esposa(nombre(ana,ruiz,lopez),profesion(docente),salario(12000)),domicilio(sevilla)).

libro_de_familia(esposo(nombre(luis,alvarez,garcia),profesion(arquitecto),salario(40000)),esposa(nombre(ana,romero,soler),profesion(sus_labores),salario(0)),domicilio(sevilla)).

