tiene_profesion(Nombre, Profesion) :- libro_de_familia(esposo(nombre(N,_,_),profesion(Profesion),_),_,_),Nombre = N.

tiene_profesion(Nombre, Profesion) :- libro_de_familia(_,esposa(nombre(N,_,_),profesion(Profesion),_),_),Nombre = N.


salario_familia(Esposo, Esposa, Salario) :-
libro_de_familia(esposo(nombre(N1,_,_),_,salario(Salario1)),esposa(nombre(N2,_,_),_,salario(Salario2)),_), Esposo = N1, Esposa = N2, Salario is Salario1 + Salario2.


gana_mas_de(Nombre,Cantidad) :-
libro_de_familia(esposo(nombre(N,_,_),_,salario(Salario),_,_),Nombre = N, Salario > Cantidad.

gana_mas_de(Nombre,Cantidad) :-
libro_de_familia(_,esposa(nombre(N,_,_),_,salario(Salario)),_),Nombre = N, Salario > Cantidad.

gana_menos_de(Nombre,Cantidad) :-
libro_de_familia(esposo(nombre(N,_,_),_,salario(Salario),_,_),Nombre = N, Salario < Cantidad.

gana_menos_de(Nombre,Cantidad) :-
libro_de_familia(_,esposa(nombre(N,_,_),_,salario(Salario)),_),Nombre = N, Salario < Cantidad.
